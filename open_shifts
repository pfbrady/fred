import settings
import requests
import datetime


def run():

    today = datetime.date.today()
    tomorrow = today + datetime.timedelta(days=1) #next day.
    end_date = today + datetime.timedelta(days=14) #2 weeks from now.

    today = today.strftime("%m/%d/%Y")
    end_date = end_date.strftime("%m/%d/%Y")
    tomorrow = tomorrow.strftime("%m/%d/%Y")

    req = requests.get('https://www3.whentowork.com/cgi-bin/w2wC4.dll/api/DailyPositionTotals?start_date=' + 
                    today + '&end_date=' + end_date + '&key=' + settings.W2W_TOKEN)
    
    req_json = req.json() 
    print(req_json['DailyPositionTotals'])
    print("Done")


if __name__ == "__open_shifts__":
    run()

